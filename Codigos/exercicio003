#código alterado

import turtle

turtle.shape("arrow") #definir a forma da tartaruga
turtle.pensize(10) 

for color in ['pink', 'red', 'black', 'blue']: #alteração na ordem das cores
    turtle.color(color) 
    turtle.forward(100) 
    turtle.right(90)

turtle.penup() #mudar a largura da linha
turtle.goto(0, -120)
turtle.pendown()

for color in ['pink', 'red', 'black', 'blue']: #desenhando o segundo quadrado
    turtle.color(color) 
    turtle.forward(100) 
    turtle.right(90)